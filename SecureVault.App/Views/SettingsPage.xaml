<Page
    x:Class="SecureVault.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" MaxWidth="800">
            <TextBlock Text="Impostazioni" FontSize="32" FontWeight="Bold"/>

            <StackPanel Spacing="16">
                <TextBlock Text="Sicurezza" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Blocco automatico dopo (minuti)"/>
                            <NumberBox x:Name="AutoLockMinutesBox" Value="5" Minimum="1" Maximum="60"/>
                        </StackPanel>
                        <StackPanel Spacing="8">
                            <TextBlock Text="Cancella appunti dopo (secondi)"/>
                            <NumberBox x:Name="ClipboardClearSecondsBox" Value="30" Minimum="5" Maximum="300"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="CheckCompromisedToggle" Header="Verifica password compromesse" IsOn="True"/>
                        <Button Content="Cambia Password Principale" Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="16">
                <TextBlock Text="Backup ed Esportazione" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <ToggleSwitch x:Name="EnableAutoBackupToggle" Header="Abilita backup automatici" IsOn="True"/>
                        <Button Content="Crea Backup Ora"/>
                        <Button Content="Esporta Credenziali"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="16">
                <TextBlock Text="Lingua / Language" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Seleziona la lingua dell'applicazione / Select application language"/>
                        <RadioButtons x:Name="LanguageSelector">
                            <RadioButton Content="ðŸ‡®ðŸ‡¹ Italiano" Tag="it" Checked="OnLanguageRadioChecked"/>
                            <RadioButton Content="ðŸ‡¬ðŸ‡§ English" Tag="en" Checked="OnLanguageRadioChecked"/>
                        </RadioButtons>
                        <TextBlock Text="âš ï¸ L'applicazione verrÃ  riavviata / The application will restart" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="16">
                <TextBlock Text="Informazioni" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="SecureVault Manager" FontWeight="SemiBold"/>
                        <TextBlock Text="Versione 1.0.0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="Un gestore di password professionale con crittografia di livello militare" TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button Content="Salva Impostazioni" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Page>
