<Page
    x:Class="SecureVault.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" MaxWidth="800">
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold"/>

            <StackPanel Spacing="16">
                <TextBlock Text="Security" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Auto-lock timeout (minutes)"/>
                            <NumberBox x:Name="AutoLockMinutesBox" Value="5" Minimum="1" Maximum="60"/>
                        </StackPanel>
                        <StackPanel Spacing="8">
                            <TextBlock Text="Clipboard clear timeout (seconds)"/>
                            <NumberBox x:Name="ClipboardClearSecondsBox" Value="30" Minimum="5" Maximum="300"/>
                        </StackPanel>
                        <ToggleSwitch x:Name="CheckCompromisedToggle" Header="Check for compromised passwords" IsOn="True"/>
                        <Button Content="Change Master Password" Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="16">
                <TextBlock Text="Backup and Export" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <ToggleSwitch x:Name="EnableAutoBackupToggle" Header="Enable automatic backups" IsOn="True"/>
                        <Button Content="Create Backup Now"/>
                        <Button Content="Export Credentials"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Spacing="16">
                <TextBlock Text="About" FontSize="20" FontWeight="SemiBold"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="SecureVault Manager" FontWeight="SemiBold"/>
                        <TextBlock Text="Version 1.0.0" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="A professional password manager with military-grade encryption" TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button Content="Save Settings" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Page>
