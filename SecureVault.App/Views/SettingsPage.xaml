<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SecureVault.App.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" MaxWidth="800">
            <!-- Header -->
            <TextBlock Text="Settings" FontSize="32" FontWeight="Bold"/>

            <!-- Security Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="Security" FontSize="20" FontWeight="SemiBold"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Auto-lock timeout (minutes)"/>
                            <NumberBox Value="{x:Bind ViewModel.AutoLockMinutes, Mode=TwoWay}" 
                                       Minimum="1" 
                                       Maximum="60"/>
                        </StackPanel>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Clipboard clear timeout (seconds)"/>
                            <NumberBox Value="{x:Bind ViewModel.ClipboardClearSeconds, Mode=TwoWay}" 
                                       Minimum="5" 
                                       Maximum="300"/>
                        </StackPanel>

                        <ToggleSwitch Header="Check for compromised passwords"
                                      IsOn="{x:Bind ViewModel.CheckForCompromisedPasswords, Mode=TwoWay}"/>

                        <Button Content="Change Master Password"
                                Command="{x:Bind ViewModel.ChangeMasterPasswordCommand}"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Backup Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="Backup & Export" FontSize="20" FontWeight="SemiBold"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="16">
                        <ToggleSwitch Header="Enable automatic backups"
                                      IsOn="{x:Bind ViewModel.EnableAutoBackup, Mode=TwoWay}"/>

                        <Button Content="Create Backup Now"
                                Command="{x:Bind ViewModel.CreateBackupCommand}"/>

                        <Button Content="Export Credentials"
                                Command="{x:Bind ViewModel.ExportCredentialsCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Appearance -->
            <StackPanel Spacing="16">
                <TextBlock Text="Appearance" FontSize="20" FontWeight="SemiBold"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Theme"/>
                        <RadioButtons SelectedItem="{x:Bind ViewModel.ThemeMode, Mode=TwoWay}">
                            <RadioButton Content="System Default" Tag="System"/>
                            <RadioButton Content="Light" Tag="Light"/>
                            <RadioButton Content="Dark" Tag="Dark"/>
                        </RadioButtons>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- About -->
            <StackPanel Spacing="16">
                <TextBlock Text="About" FontSize="20" FontWeight="SemiBold"/>
                
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16"
                        BorderThickness="1"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Spacing="8">
                        <TextBlock Text="SecureVault Manager" FontWeight="SemiBold"/>
                        <TextBlock Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="A professional password manager with military-grade encryption" 
                                   TextWrapping="Wrap"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Save Button -->
            <Button Content="Save Settings"
                    Command="{x:Bind ViewModel.SaveSettingsCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Page>
