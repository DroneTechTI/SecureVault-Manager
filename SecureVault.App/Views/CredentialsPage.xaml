<Page
    x:Class="SecureVault.App.Views.CredentialsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecureVault.App.ViewModels">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Le Mie Password" FontSize="32" FontWeight="Bold" Margin="0,0,0,24"/>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="SearchBox" Grid.Column="0" PlaceholderText="Cerca credenziali..." Margin="0,0,16,0"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Tutte" Click="OnFilterAll" Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="â­ Preferite" Click="OnFilterFavorites"/>
                <Button Content="Deboli" Click="OnFilterWeak"/>
                <Button Content="Duplicate" Click="OnFilterDuplicate"/>
                <Button Content="Compromesse" Click="OnFilterCompromised"/>
                <Button Content="ðŸ“ Raggruppa" Click="OnToggleGroupView" Margin="16,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Regular List View -->
        <ListView x:Name="CredentialsList" Grid.Row="2" SelectionMode="Single" Visibility="{x:Bind ViewModel.IsGroupedView, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:CredentialItemViewModel">
                    <Grid Padding="12" Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="48"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon with Favorite Star -->
                        <Grid Grid.Column="0">
                            <Border Width="40" Height="40" CornerRadius="20" Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE8D7;" FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Button Content="â­" FontSize="14" Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0"
                                    Click="OnToggleFavorite" Tag="{x:Bind}" Visibility="{x:Bind IsFavorite, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Button Content="â˜†" FontSize="14" Width="24" Height="24" Padding="0" Background="Transparent" BorderThickness="0" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-4,-4,0" Opacity="0.5"
                                    Click="OnToggleFavorite" Tag="{x:Bind}" Visibility="{x:Bind IsFavorite, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                        </Grid>

                        <!-- Info -->
                        <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{x:Bind Title}" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Username}" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Password, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                <TextBlock Text="ðŸ”‘ â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                <Button Content="ðŸ‘" FontSize="12" Padding="4,2" Click="OnTogglePasswordVisibility" Tag="{x:Bind}" Background="Transparent" BorderThickness="0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="{x:Bind Domain}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                                <ProgressBar Value="{x:Bind PasswordStrength}" Maximum="100" Width="80" Height="6" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Bind PasswordStrength}" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Status Badge -->
                        <Border Grid.Column="2" CornerRadius="4" Padding="8,4" VerticalAlignment="Center" Margin="8,0">
                            <Border.Background>
                                <SolidColorBrush Color="{x:Bind StatusColorValue}"/>
                            </Border.Background>
                            <TextBlock Text="{x:Bind StatusText}" FontSize="12" Foreground="White"/>
                        </Border>

                        <!-- Actions -->
                        <Button Grid.Column="3" Content="â‹®" VerticalAlignment="Center">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="ðŸ“ Visualizza/Modifica Note" Click="OnViewNotesClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutItem Text="ðŸ·ï¸ Gestisci Categorie" Click="OnManageTagsClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="ðŸ” Genera Nuova Password" Click="OnGeneratePasswordClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutItem Text="ðŸ“‹ Copia Username" Click="OnCopyUsernameClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutItem Text="ðŸ“‹ Copia Password" Click="OnCopyPasswordClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutItem Text="ðŸŒ Apri Sito" Click="OnOpenUrlClick" Tag="{x:Bind}"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="ðŸ—‘ï¸ Elimina" Click="OnDeleteCredentialClick" Tag="{x:Bind}"/>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Grouped View -->
        <ScrollViewer Grid.Row="2" Visibility="{x:Bind ViewModel.IsGroupedView, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.GroupedCredentials, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,24">
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="16,12" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <TextBlock Text="ðŸŒ" FontSize="20"/>
                                    <TextBlock Text="{Binding Domain}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="12" Padding="8,4">
                                        <TextBlock Text="{Binding Count}" FontSize="12" Foreground="White" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            
                            <ItemsRepeater ItemsSource="{Binding Credentials}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="local:CredentialItemViewModel">
                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="0,4" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="48"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Icon -->
                                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="{ThemeResource AccentFillColorDefaultBrush}">
                                                    <FontIcon Glyph="&#xE8D7;" FontSize="18" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Info -->
                                                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{x:Bind Title}" FontSize="16" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{x:Bind Username}" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <TextBlock Text="{x:Bind Password, Mode=OneWay}" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        <TextBlock Text="ðŸ”‘ â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Visibility="{x:Bind IsPasswordVisible, Mode=OneWay, Converter={StaticResource BoolNegationToVisibilityConverter}}"/>
                                                        <Button Content="ðŸ‘" FontSize="12" Padding="4,2" Click="OnTogglePasswordVisibility" Tag="{x:Bind}" Background="Transparent" BorderThickness="0"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <ProgressBar Value="{x:Bind PasswordStrength}" Maximum="100" Width="100" Height="6" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{x:Bind PasswordStrength}" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Status Badge -->
                                                <Border Grid.Column="2" CornerRadius="4" Padding="8,4" VerticalAlignment="Center" Margin="8,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{x:Bind StatusColorValue}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{x:Bind StatusText}" FontSize="12" Foreground="White"/>
                                                </Border>

                                                <!-- Actions -->
                                                <Button Grid.Column="3" Content="â‹®" VerticalAlignment="Center">
                                                    <Button.Flyout>
                                                        <MenuFlyout>
                                                            <MenuFlyoutItem Text="ðŸ“ Visualizza/Modifica Note" Click="OnViewNotesClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutItem Text="ðŸ·ï¸ Gestisci Categorie" Click="OnManageTagsClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutSeparator/>
                                                            <MenuFlyoutItem Text="ðŸ” Genera Nuova Password" Click="OnGeneratePasswordClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutItem Text="ðŸ“‹ Copia Username" Click="OnCopyUsernameClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutItem Text="ðŸ“‹ Copia Password" Click="OnCopyPasswordClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutItem Text="ðŸŒ Apri Sito" Click="OnOpenUrlClick" Tag="{x:Bind}"/>
                                                            <MenuFlyoutSeparator/>
                                                            <MenuFlyoutItem Text="ðŸ—‘ï¸ Elimina" Click="OnDeleteCredentialClick" Tag="{x:Bind}"/>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <ProgressRing x:Name="LoadingRing" Grid.Row="2" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
