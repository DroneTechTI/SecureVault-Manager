<Page
    x:Class="SecureVault.App.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <TextBlock Text="Dashboard Sicurezza" FontSize="32" FontWeight="Bold"/>

            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="24" BorderThickness="1" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,32,0">
                        <Ellipse Width="120" Height="120" Fill="{ThemeResource AccentFillColorDefaultBrush}" Opacity="0.1"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="ScoreText" Text="100" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ScoreLevelText" Text="Loading..." FontSize="14" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Grid.Column="1" Spacing="16" VerticalAlignment="Center">
                        <TextBlock Text="Panoramica Salute Password" FontSize="20" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock x:Name="TotalCredentialsText" Text="0" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Text="Credenziali Totali" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock x:Name="StrongPasswordsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                <TextBlock Text="Password Forti" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,16,0,0">
                                <TextBlock x:Name="WeakPasswordsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#FFC107"/>
                                <TextBlock Text="Password Deboli" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>

                            <Button Grid.Row="1" Grid.Column="1" Margin="0,16,0,0" Click="OnViewCompromisedClick" Background="Transparent" BorderThickness="0" Padding="0" HorizontalAlignment="Left">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind ViewModel.CompromisedPasswords, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="#F44336"/>
                                    <TextBlock Text="ðŸ” Compromesse (clicca per dettagli)" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Page>
