<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="SecureVault.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureVault.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView x:Name="NavView"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        SelectionChanged="OnNavigationSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard" Icon="Home"/>
                <NavigationViewItem Content="Credentials" Tag="Credentials" Icon="Permissions"/>
                <NavigationViewItem Content="Import" Tag="Import" Icon="Import"/>
                <NavigationViewItem Content="Generator" Tag="Generator" Icon="Emoji2"/>
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>
                <StackPanel>
                    <Button Content="Lock Vault" 
                            Click="OnLockVaultClick"
                            Style="{StaticResource SubtleButtonStyle}"
                            HorizontalAlignment="Stretch">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE72E;" FontSize="16"/>
                                <TextBlock Text="Lock Vault" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </NavigationView.PaneFooter>

            <Frame x:Name="ContentFrame" Margin="0"/>
        </NavigationView>
    </Grid>
</Page>
