<Page
    x:Class="SecureVault.App.Views.DuplicatePasswordsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock Text="Gestione Password Duplicate" FontSize="32" FontWeight="Bold"/>
            <TextBlock Text="Questi account usano la stessa password. Crea password uniche per ognuno." FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Actions Bar -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" x:Name="StatsText" Text="Trovati 0 gruppi di password duplicate" FontSize="16" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Content="Genera Password per Tutti" Click="OnGenerateAllClick" Style="{StaticResource AccentButtonStyle}"/>
                <Button Content="Apri Tutti i Siti" Click="OnOpenAllSitesClick"/>
                <Button Content="Aggiorna" Click="OnRefreshClick"/>
            </StackPanel>
        </Grid>

        <!-- Duplicate Groups List -->
        <ScrollViewer Grid.Row="2">
            <StackPanel x:Name="DuplicateGroupsPanel" Spacing="16"/>
        </ScrollViewer>

        <!-- Loading -->
        <ProgressRing x:Name="LoadingRing" Grid.Row="2" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
